-- SQL query to find the top 10 countries for Rockbuster in terms of customer numbers
SELECT COUNT(A.customer_id), D.country,
FROM customer A
INNER JOIN address B ON A.address_id = B.address_id
INNER JOIN city C ON B.city_id = C. city_id
INNER JOIN country D ON C.country_id = D.country_id
GROUP BY country
ORDER BY COUNT(customer_id) DESC
LIMIT 10;


-- SQL query to find the top 5 customers whoâ€™ve paid the highest total amounts to Rockbuster
SELECT A.customer_id, A.first_name, A.last_name, C.city, D.country,
SUM (E.amount) AS total_amount_paid
FROM customer A
INNER JOIN address B ON A.address_id = B.address_id
INNER JOIN city C ON B.city_id = C.city_id
INNER JOIN country D ON C.country_id = D.country_id
INNER JOIN payment E ON A.customer_id = E.customer_id
GROUP BY A.customer_id, C.city, D.country
ORDER BY total_amount_paid DESC
LIMIT 5;
